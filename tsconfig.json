{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "target": "es5",
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
