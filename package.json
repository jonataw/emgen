{
  "name": "emgen",
  "description": "Generate email templates with automatic file inclusion and stylesheet inlining, or even with Vue templates!",
  "version": "0.1.0",
  "author": "Jonatan Wackstr√∂m <jonatan.wackstrom@gmail.com>",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonataw/emgen.git"
  },
  "homepage": "https://github.com/jonataw/emgen",
  "keywords": [
    "emgen",
    "email",
    "template",
    "generate",
    "generator",
    "stylesheets",
    "html",
    "sass",
    "less",
    "stylus",
    "vue"
  ],
  "dependencies": {
    "deepmerge": "^4.2.2",
    "juice": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "@vue/compiler-sfc": "^3.2.29",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.52.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4",
    "vue-i18n": "^9.2.0-beta.30"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "build": "rimraf dist && rollup -c && tsc --emitDeclarationOnly",
    "lint": "eslint",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  }
